@model Product_Display.Models.View_Model.FGNBondVM
@{
    ViewData["Title"] = "FGN Bonds Prices";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient text-white d-flex justify-content-between align-items-center">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">FGN Bonds Prices</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle"></i> Add Bonds
                </button>
            </div>
        </div>

        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>ISIN</th>
                    <th>Maturity</th>
                    <th>Years to Maturity</th>
                    <th>Price</th>
                    <th>Yield To Maturity (%)</th>
                    <th>Coupon (%)</th>
                    <th>Security</th>
                    <th>Published</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FGNBonds)
                {
                    <tr>
                        <td>@item.ISIN</td>
                        <td>@item.Maturity.ToString("yyyy-MM-dd")</td>
                        <td>@item.YearsToMaturity</td>
                        <td>@item.Price</td>
                        <td>@item.YieldToMaturity</td>
                        <td>@item.Coupon</td>
                        <td>@item.Security</td>
                        <td>
                            @if (item.Published)
                            {
                                <i class="bi bi-check-lg text-success"></i>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#editModal-@item.ISIN">Edit</button>
                        </td>
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editModal-@item.ISIN" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" asp-action="Upsert">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit Bond</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" asp-for="FGNBond.ISIN" value="@item.ISIN" />
                                        <input type="hidden" name="FGNBond.ISIN" value="@item.ISIN" />

                                        <div class="mb-3">
                                            <label asp-for="FGNBond.Security" class="form-label"></label>
                                            <input asp-for="FGNBond.Security" class="form-control" name="FGNBond.Security" value="@item.Security" />
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="FGNBond.Maturity" class="form-label"></label>
                                            <input asp-for="FGNBond.Maturity" class="form-control" name="FGNBond.Maturity" type="date" value="@item.Maturity.ToString("yyyy-MM-dd")" />
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="FGNBond.YearsToMaturity" class="form-label"></label>
                                            <input asp-for="FGNBond.YearsToMaturity" class="form-control" name="FGNBond.YearsToMaturity" value="@item.YearsToMaturity" />
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="FGNBond.Price" class="form-label"></label>
                                            <input asp-for="FGNBond.Price" class="form-control" name="FGNBond.Price" value="@item.Price" />
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="FGNBond.YieldToMaturity" class="form-label"></label>
                                            <input asp-for="FGNBond.YieldToMaturity" class="form-control" name="FGNBond.YieldToMaturity" value="@item.YieldToMaturity" />
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="FGNBond.Coupon" class="form-label"></label>
                                            <input asp-for="FGNBond.Coupon" class="form-control" name="FGNBond.Coupon" value="@item.Coupon" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success">Save</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Upsert">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Bond</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="FGNBond.ISIN" class="form-label"></label>
                        <input asp-for="FGNBond.ISIN" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="FGNBond.Maturity" class="form-label"></label>
                        <input asp-for="FGNBond.Maturity" class="form-control" type="date" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="FGNBond.YearsToMaturity" class="form-label"></label>
                        <input asp-for="FGNBond.YearsToMaturity" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="FGNBond.Price" class="form-label"></label>
                        <input asp-for="FGNBond.Price" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="FGNBond.YieldToMaturity" class="form-label"></label>
                        <input asp-for="FGNBond.YieldToMaturity" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="FGNBond.Coupon" class="form-label"></label>
                        <input asp-for="FGNBond.Coupon" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="FGNBond.Security" class="form-label"></label>
                        <input asp-for="FGNBond.Security" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
