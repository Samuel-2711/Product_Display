@using Product_Display.Models
@inject Product_Display.Data.AppDbContext _db
@{
    var textRoller = _db.TextRollers.FirstOrDefault();
    string marqueeText = textRoller != null ? textRoller.Text.Replace("||", " &nbsp;||&nbsp;") : "Welcome to Treasury Rates";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: white;
            border-bottom: 1px solid #ccc;
        }

        .datetime {
            font-size: 14px;
            font-weight: bold;
        }

        .logo img {
            height: 40px;
        }

        .footer {
            background-color: navy;
            padding: 5px 10px;
            color: white;
            font-size: 13px;
            text-align: center;
        }

            .footer marquee {
                color: white;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="header">
        <div class="datetime" id="datetime"></div>
        <div class="logo">
            <img src="~/images/CVimage.png" alt="Standard Chartered" />
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <div class="footer">
        <marquee>@Html.Raw(marqueeText)</marquee>
    </div>

    <script>
        function updateTime() {
            const now = new Date();
            const options = {
                weekday: 'long', year: 'numeric', month: 'long',
                day: 'numeric', hour: 'numeric', minute: 'numeric',
                hour12: true
            };
            document.getElementById('datetime').textContent = now.toLocaleString('en-US', options);
        }
        updateTime();
        setInterval(updateTime, 60000);
    </script>
</body>
</html>
