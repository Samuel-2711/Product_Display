@using Product_Display.Models
@inject Product_Display.Data.AppDbContext _db

@{
    var textRoller = _db.TextRollers.FirstOrDefault();
    string marqueeText = textRoller != null ? textRoller.Text.Replace("||", " &nbsp;||&nbsp;") : "Welcome to Treasury Rates";

    var savings = _db.SavingDays.OrderBy(s => s.Id).ToList();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }

        .client-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 20px;
            background-color: white;
            border-bottom: 1px solid #ccc;
        }

        .datetime {
            font-size: 14px;
            font-weight: bold;
        }

        .logo img {
            height: 40px;
        }

        .content-wrapper {
            flex: 1;
            padding: 0 20px 10px;
        }

        .saving-row {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            background-color: #f8f9fa;
            padding: 5px;
            font-size: 14px;
            font-weight: bold;
            color: #004085;
        }

            .saving-row div {
                flex: 1;
                text-align: center;
                border-right: 1px solid #dee2e6;
            }

                .saving-row div:last-child {
                    border-right: none;
                }

        .footer-marquee {
            background-color: navy;
            color: white;
            font-size: 14px;
            padding: 5px 10px;
            margin-top: 10px;
        }

            .footer-marquee marquee {
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="client-header">
        <div class="datetime" id="datetime"></div>
        <div class="logo">
            <img src="~/images/CVimage.png" alt="Standard Chartered" />
        </div>
    </div>

    <div class="content-wrapper">
        @RenderBody()
    </div>

    <!-- SavingDay Row Table -->
    <div class="saving-row">
        @foreach (var item in savings)
        {
            <div>
                <div>@item.Days</div>
                <div style="color: green;">@item.Percent.ToString("0.00")%</div>
            </div>
        }
    </div>

    <!-- Marquee Text -->
    <div class="footer-marquee">
        <marquee>@Html.Raw(marqueeText)</marquee>
    </div>

    <script>
        function updateTime() {
            const now = new Date();
            const options = {
                weekday: 'long', year: 'numeric', month: 'long',
                day: 'numeric', hour: 'numeric', minute: 'numeric',
                hour12: true
            };
            document.getElementById('datetime').textContent = now.toLocaleString('en-US', options);
        }
        updateTime();
        setInterval(updateTime, 60000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
