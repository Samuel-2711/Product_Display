<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            border-bottom: 1px solid #ccc;
            background-color: white;
        }

        .datetime {
            font-size: 14px;
            font-weight: bold;
        }

        .logo img {
            height: 40px;
        }

        .main-container {
            display: flex;
        }

        .left-panel {
            width: 200px;
            background-color: #e8f0fe;
            padding: 10px;
        }

        .content-panel {
            flex: 1;
            padding: 20px;
            background-color: white;
        }

        .footer {
            background-color: #e8f0fe;
            padding: 5px 10px;
            text-align: center;
            font-size: 12px;
            border-top: 1px solid #ccc;
        }

        marquee {
            color: #000066;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="datetime" id="datetime"></div>
        <div class="logo">
            <img src="~/images/sc-logo.png" alt="Standard Chartered" />
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-container">
        <!-- Sidebar -->
        <div class="left-panel">
            @RenderSection("Sidebar", required: false)
        </div>

        <!-- Body Content -->
        <div class="content-panel">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <marquee>Upgrade Your SC Mobile App To Enjoy Our New & Refreshed Services.</marquee>
    </div>

    <!-- Live Time Script -->
    <script>
        function updateTime() {
            const now = new Date();
            const options = {
                weekday: 'long', year: 'numeric', month: 'long',
                day: 'numeric', hour: 'numeric', minute: 'numeric',
                hour12: true
            };
            document.getElementById('datetime').textContent = now.toLocaleString('en-US', options);
        }

        updateTime();
        setInterval(updateTime, 1000);
    </script>
</body>
</html>
