@model IEnumerable<Product_Display.Models.TextRoller>
@using Product_Display.Models

@{
    ViewData["Title"] = "Text Roller";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient text-white d-flex justify-content-between align-items-center">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Text Roller</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <!-- You can add filters/search here if needed -->
            </div>
            <div class="col-6 text-end">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle"></i> Add Text
                </button>
            </div>
        </div>

        <table class="table table-striped table-borderless" id="textRollerTable">
            <thead>
                <tr>
                    <th>Marquee Text</th>
                    <th style="width: 200px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Text</td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-primary editBtn" data-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger deleteBtn" data-id="@item.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Include Create Modal Partial -->
@await Html.PartialAsync("Create")

<!-- Edit Modal Container -->
<div id="editModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- AJAX content for Edit modal will be loaded here -->
        </div>
    </div>
</div>

<!-- Anti-forgery Token -->
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        $(document).ready(function () {
            // Load Edit Modal
            $('.editBtn').click(function () {
                let id = $(this).data('id');
                $('#editModal .modal-content').load('/TextRoller/Edit/' + id, function () {
                    $('#editModal').modal('show');
                });
            });

            // Handle Delete
            $('.deleteBtn').click(function () {
                let id = $(this).data('id');
                if (confirm('Are you sure you want to delete this text?')) {
                    $.ajax({
                        url: '/TextRoller/Delete/' + id,
                        type: 'POST',
                        data: {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function () {
                            location.reload();
                        },
                        error: function () {
                            alert('Failed to delete text.');
                        }
                    });
                }
            });
        });
    </script>
}
