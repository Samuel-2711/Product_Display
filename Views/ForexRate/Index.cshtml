@model Product_Display.Models.View_Model.ForexRateVM

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .forex-card {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        background-color: #f9f9f9;
        height: 100%;
    }

    .forex-title {
        font-weight: bold;
        font-size: 1.25rem;
    }

    .forex-symbol {
        font-size: 0.9rem;
        color: gray;
    }

    .forex-arrow {
        color: green;
        font-weight: bold;
    }

    .rate-label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .rate-input {
        border: none;
        border-bottom: 1px solid #aaa;
        text-align: center;
        font-weight: 500;
        background: transparent;
        width: 100%;
    }

        .rate-input:focus {
            outline: none;
            border-bottom: 2px solid #007bff;
        }
</style>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var rate in Model.Rates)
        {
            <div class="col">
                <div class="forex-card">
                    <div class="forex-title text-primary">
                        @rate.CurrencyName <span class="forex-symbol">@rate.Symbol</span>
                        @if (rate.IsUpwardTrend)
                        {
                            <span class="forex-arrow">▲</span>
                        }
                    </div>

                    <form asp-action="Update" method="post">
                        <input type="hidden" name="Id" value="@rate.Id" />

                        <div class="mt-3">
                            <div class="rate-label text-primary">We Buy</div>
                            <input type="text" name="BuyRate" class="rate-input" value="@rate.BuyRate" />
                        </div>

                        <div class="mt-3">
                            <div class="rate-label text-primary">We Sell</div>
                            <input type="text" name="SellRate" class="rate-input" value="@rate.SellRate" />
                        </div>

                        <button type="submit" class="btn btn-sm btn-outline-primary mt-3">Save</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
