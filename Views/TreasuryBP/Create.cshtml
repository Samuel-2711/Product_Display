@model TreasuryBP

<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Create" method="post" id="createForm">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="createModalLabel">Add Treasury Bill Price</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Maturity" class="form-label"></label>
                        <input asp-for="Maturity" class="form-control" />
                        <span asp-validation-for="Maturity" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SecurityId" class="form-label"></label>
                        <input asp-for="SecurityId" class="form-control" />
                        <span asp-validation-for="SecurityId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TenorDays" class="form-label"></label>
                        <input asp-for="TenorDays" class="form-control" />
                        <span asp-validation-for="TenorDays" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DiscountPercentage" class="form-label"></label>
                        <input asp-for="DiscountPercentage" class="form-control" />
                        <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
