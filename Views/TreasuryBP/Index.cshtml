@model List<TreasuryBP>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient text-white d-flex justify-content-between align-items-center">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Treasury Bill Prices</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="TreasuryBP" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Add New Record
                </a>
            </div>
        </div>

        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>Maturity</th>
                    <th>Security ID</th>
                    <th>Tenor (Days)</th>
                    <th>Discount (%)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(t => t.TenorDays))
                {
                    <tr>
                        <td>@item.Maturity</td>
                        <td>@item.SecurityId</td>
                        <td>@item.TenorDays</td>
                        <td>@item.DiscountPercentage</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="TreasuryBP" asp-action="Edit" asp-route-id="@item.SecurityId" class="btn btn-custom-green mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="TreasuryBP" asp-action="Delete" asp-route-id="@item.SecurityId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial" />
    }
}