@model List<Product_Display.Models.TreasuryBP>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient text-white d-flex justify-content-between align-items-center">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Treasury Bill Prices</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                    <i class="bi bi-plus-circle"></i> Add New Record
                </button>
            </div>
        </div>

        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>Maturity</th>
                    <th>Security ID</th>
                    <th>Tenor (Days)</th>
                    <th>Discount (%)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(t => t.TenorDays))
                {
                    <tr>
                        <td>@item.Maturity</td>
                        <td>@item.SecurityId</td>
                        <td>@item.TenorDays</td>
                        <td>@item.DiscountPercentage</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button onclick="openEditModal('@item.SecurityId')" class="btn btn-success btn-sm mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                                <button onclick="deleteItem('@item.SecurityId')" class="btn btn-danger btn-sm mx-1">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Include Modals -->
@await Html.PartialAsync("Create", new Product_Display.Models.TreasuryBP())
@await Html.PartialAsync("Edit", new Product_Display.Models.TreasuryBP())

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function openEditModal(id) {
            $.get('/TreasuryBP/Edit/' + id, function (data) {
                $('#editModalBody').html(data);
                var modal = new bootstrap.Modal(document.getElementById('editModal'));
                modal.show();
            });
        }

        function deleteItem(id) {
            if (confirm('Are you sure you want to delete this record?')) {
                $.post('/TreasuryBP/Delete', { id: id }, function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert('Delete failed.');
                    }
                });
            }
        }
    </script>
}
