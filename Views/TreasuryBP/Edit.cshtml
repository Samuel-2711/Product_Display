@model TreasuryBP

<form asp-action="Edit" method="post" id="editForm">
    <div class="modal-header bg-success text-white">
        <h5 class="modal-title">Edit Treasury Bill Price</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SecurityId" />
        <div class="mb-3">
            <label asp-for="Maturity" class="form-label"></label>
            <input asp-for="Maturity" class="form-control" />
            <span asp-validation-for="Maturity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TenorDays" class="form-label"></label>
            <input asp-for="TenorDays" class="form-control" />
            <span asp-validation-for="TenorDays" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiscountPercentage" class="form-label"></label>
            <input asp-for="DiscountPercentage" class="form-control" />
            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary text-white">Update</button>
    </div>
</form>
